<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="EditTextHintStyle">
        <item name="android:textColor">@color/editTextHintColor</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColorPrimary">@color/editTextColor</item>
        <item name="colorControlActivated">@color/strokeColorActivated</item>
        <item name="colorControlNormal">@color/strokeColorNormal</item>
    </style>
</resources>